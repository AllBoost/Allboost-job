import sqlite3

conn = sqlite3.connect('allboost_job.db')
c = conn.cursor()

c.execute('''CREATE TABLE employees (id INTEGER PRIMARY KEY, name TEXT, position TEXT)''')
c.execute('''CREATE TABLE clients (id INTEGER PRIMARY KEY, name TEXT, status TEXT)''')
c.execute('''CREATE TABLE cold_clients (id INTEGER PRIMARY KEY, name TEXT, status TEXT)''')
c.execute('''CREATE TABLE gold_clients (id INTEGER PRIMARY KEY, name TEXT, status TEXT)''')
c.execute('''CREATE TABLE confirmed_clients (id INTEGER PRIMARY KEY, name TEXT, status TEXT)''')

conn.commit()
conn.close()
